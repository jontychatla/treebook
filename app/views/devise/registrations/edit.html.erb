
<div class"row">
  <div class="col-md-4">  
    <fieldset>
    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }, :html => {class: "well"}) do |f| %>
      <%= devise_error_messages! %>
      <legend>Edit <%= resource_name.to_s.humanize %></legend>
      <%= f.input :email %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <%= f.input :password %>
   
      <%= f.input :password_confirmation, :autofocus => true %>
    
      <%= f.input :current_password %>
     
      <div><%= f.submit "Update", class: "btn btn-default"  %></div>
      </fieldset>
    <% end %>

    <fieldset>
    <h3>Cancel my account</h3>

    <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %></p>
    </fieldset>
    <%= link_to "Back", :back %>
  </div>
</div>

