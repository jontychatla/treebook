<!DOCTYPE html>
<html>
<head>
  <title>Treebook</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
	<div class="navbar-header">
		<a class="navbar-brand" href="#">Treebook</a>
		<ul class="nav navbar-nav">
			<li><%= link_to "All Statuses", statuses_path%></li>
			<li><%= link_to "New Status", new_status_path%></li>
		</ul>
	</div>
	<div class="collapse navbar-collapse">
		<ul class="nav navbar-nav navbar-right">
			<% if user_signed_in? %>
    			<li><%= link_to current_user.full_name, edit_user_registration_path %></li>
				<li><%= link_to "Sign Out", logout_path %></li>
			<% else%>
				<li><%= link_to "Register", register_path %></li>
				<li><%= link_to "Log in", login_path %></li>
			<%end%>
		</ul>
	</div>
</nav>


<div class="container active">
	<% flash.each do |type, message| %>
		<div class="alert <%= flash_class type %>">
			<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
			<%= message %>
		</div>	
	<% end %>
<%= yield %>
</div>
</body>
</html>
